---
const menu = ["HOME","ABOUT","SERVICE","HELP"]
---

<div id="contenedorAnclas">

    <span class="material-symbols-outlined" id="barras">
        menu
    </span>

        {
            menu.map(Element=> <a>{Element}</a>)
        }

</div>

<style>
    
    a{
        cursor: pointer;
        border-bottom: 3px solid transparent;
    }

    a:hover{
        border-bottom: 3px solid white;
    }

    #contenedorAnclas{
        width:55%;
        height: 100%;
        display: flex;
        justify-content: space-around;
        align-items: center;
        background: transparent;
        font-size: 24px;
    }

    #barras{
        font-size: 35px;
        cursor: pointer;
    }
    
</style>